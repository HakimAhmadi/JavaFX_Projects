<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.THRController">
  <columnConstraints>
    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="310.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label fx:id="AmountLabel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="Age">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <GridPane.margin>
            <Insets right="5.0" />
         </GridPane.margin>
      </Label>
      <Label fx:id="PeopleLabel" alignment="CENTER_RIGHT" text="Max Heart.B" GridPane.rowIndex="1">
         <padding>
            <Insets right="5.0" />
         </padding>
      </Label>
      <Label fx:id="EachLabel" alignment="TOP_RIGHT" contentDisplay="RIGHT" text="Target Heart Rate Range" GridPane.rowIndex="2">
         <padding>
            <Insets right="5.0" />
         </padding>
      </Label>
      <TextField fx:id="AgeValue" maxWidth="300.0" prefWidth="350.0" GridPane.columnIndex="1" />
      <TextField fx:id="MaxHearValue" editable="false" maxWidth="300.0" minHeight="-Infinity" minWidth="-Infinity" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="THRrValue" editable="false" maxWidth="300.0" prefHeight="26.0" prefWidth="350.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Button fx:id="CalculateBtn" alignment="CENTER" contentDisplay="RIGHT" minWidth="-Infinity" mnemonicParsing="false" onAction="#CalculatingRate" prefHeight="26.0" prefWidth="300.0" text="Calculate" GridPane.columnIndex="1" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets bottom="5.0" top="5.0" />
         </GridPane.margin></Button>
   </children>
   <padding>
      <Insets bottom="5.0" top="5.0" />
   </padding>
</GridPane>
